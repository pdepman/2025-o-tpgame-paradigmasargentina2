describe "Test para el puntaje del juego" {

  

  test "Cuando un enemigo sale de pantalla se resta puntaje" {

    nave.resetPuntaje()
    const enemigo = new EnemigoDebil()
    enemigo.posicion(game.at(0,5)) // lo coloco al borde
    
    enemigo.moverALaIzquierda()    // deber√≠a activar destruirPorEscape()
    
    assert.equals(-1, nave.puntaje())
    assert.equals(true,enemigo.seEscapo())
  }

  test "Cuando un enemigo es alcanzado por un proyectil Se suma puntaje" {
    nave.resetPuntaje()
    const enemigo = new EnemigoDebil()  // tiene valor = 1
    enemigo.disparado()                 
    assert.equals(1, nave.puntaje()) //suma 1 al puntaje
  }

}
