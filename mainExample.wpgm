import wollok.game.*

import example.pepita
import naves.*

program JuegoNave {
	game.title("juegoNave")
	game.height(103)
	game.width(154)
	game.cellSize(10)

	game.boardGround("fondo.jpg")

// nave con movimiento
	game.addVisual(nave)
	keyboard.right().onPressDo({nave.moverALaDerecha()})
	keyboard.left().onPressDo({nave.moverALaIzquierda()})
	keyboard.up().onPressDo({nave.moverArriba()})
	keyboard.down().onPressDo({nave.moverAbajo()})


	game.showAttributes(nave) //Debug

	game.start()
}
